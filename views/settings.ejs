<h1>Settings</h1>

<form method="POST">
	<div id="dogContainer">
		<div class="dogSelectors">
			<img src="images/dog-icon.png" id="smlDogImg">
			<label id="smallDogLabel" class="dogLabels">Small Dogs</label>
			<select id="smallDogs" name="smallDogs" class="numDogSelector">
				<option>0</option>
				<option>1</option>
				<option>2</option>
				<option>3</option>
				<option>4</option>
				<option>5</option>
			</select>
		</div>
		<div class="dogSelectors">
			<img src="images/dog-icon.png" id="medDogImg">
			<label id="mediumDogLabel" class="dogLabels">Medium Dogs</label>
			<select id="mediumDogs" name="mediumDogs" class="numDogSelector">
				<option>0</option>
				<option>1</option>
				<option>2</option>
				<option>3</option>
				<option>4</option>
				<option>5</option>
			</select>
		</div>
		<div class="dogSelectors">
			<img src="images/dog-icon.png" id="lrgDogImg">
			<label id="largeDogLabel" class="dogLabels">Large Dogs</label>
			<select id="largeDogs" name="largeDogs" class="numDogSelector">
				<option>0</option>
				<option>1</option>
				<option>2</option>
				<option>3</option>
				<option>4</option>
				<option>5</option>
			</select>
		</div>
		
	</div>
	<div id="dogSubmit">
		<input type="submit" value="Submit">
	</div>
</form>


